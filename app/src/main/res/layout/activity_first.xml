<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trios.android.trios.first">


    <EditText
        android:id="@+id/editTextname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextplace"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="18dp"
        android:textColor="#000"
        android:textColorHint="#fff"
        android:hint="Enter name."
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_above="@+id/imageView"
        android:layout_marginEnd="20dp"
        android:layout_alignStart="@+id/editTextname"
        android:layout_marginBottom="44dp"
        android:textColorHint="#fff"
        android:hint="Enter place to show Advertisement" />


    <Button
        android:id="@+id/buttonChoose"
        android:background="@drawable/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonUpload"
        android:layout_alignBottom="@+id/buttonUpload"
        android:layout_toEndOf="@+id/imageView"
        android:layout_weight="1"
        android:text="Choose" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextname"
        android:layout_marginBottom="117dp"
        android:layout_marginStart="59dp"
        android:layout_weight="1"
        android:text="Upload" />


    <ImageView
        android:id="@+id/imageView"
        android:background="@drawable/custom_button"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_above="@+id/buttonChoose"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignStart="@+id/editTextplace"
        android:layout_marginBottom="11dp"
        android:textColor="#fff"
        android:layout_marginStart="8dp"
        android:text="Select Palakkad or Thrissur or Kochi" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/trio" />

</RelativeLayout>